{
  "name": "zavx0z/nginx",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "tools/nginx/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "tools/nginx/build",
        "main": "tools/nginx/src/index.ts",
        "tsConfig": "tools/nginx/tsconfig.lib.json",
        "assets": [
          "tools/nginx/*.md",
          {
            "input": "./tools/nginx/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./tools/nginx/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./tools/nginx",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./tools/nginx",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "tools/nginx/**/*.ts",
          "tools/nginx/package.json"
        ]
      }
    }
  },
  "tags": []
}
