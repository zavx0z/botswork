{
  "$schema": "http://json-schema.org/schema",
  "$id": "Lib",
  "title": "Библиотека SvelteKit",
  "description": "Генерация библиотеки SvelteKit",
  "type": "object",
  "properties": {
    "libName": {
      "description": "Название библиотеки",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 1
      },
      "x-prompt": "Название библиотеки"
    },
    "directory": {
      "description": "Имя директории",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "Имя директории"
    },
    "type": {
      "description": "Тип библиотеки",
      "type": "string",
      "enum": [
        "logic",
        "ui"
      ],
      "default": "ui",
      "x-prompt": {
        "message": "Какой тип?",
        "type": "list",
        "items": [
          {
            "value": "logic",
            "label": "Логика"
          },
          {
            "value": "ui",
            "label": "Интерфейс"
          }
        ]
      }
    },
    "port": {
      "description": "Порт",
      "type": "number",
      "default": 1000,
      "minimum": 1000,
      "maximum": 1999,
      "x-prompt": {
        "message": "Порт для сервера разработки"
      }
    },
    "xstate": {
      "description": "Использовать библиотеку конечного автомата.",
      "type": "boolean",
      "default": true
    }
  },
  "required": [
    "libName",
    "directory",
    "type",
    "port"
  ],
  "additionalProperties": false
}
