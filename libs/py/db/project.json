{
  "name": "py-db",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/py/db/py_db",
  "targets": {
    "migrate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "..\\..\\..\\..\\.venv\\Scripts\\activate.bat && alembic upgrade head",
        "cwd": "libs/py/db/py_db"
      }
    },
    "build-sql": {
      "executor": "nx:run-commands",
      "options": {
        "command": "..\\..\\..\\..\\.venv\\Scripts\\activate.bat && alembic upgrade head --sql > ../dist/01_tables.sql",
        "cwd": "libs/py/db/py_db"
      }
    },
    "lock": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "poetry lock --no-update",
        "cwd": "libs/py/db"
      }
    },
    "add": {
      "executor": "@nxlv/python:add",
      "options": {}
    },
    "update": {
      "executor": "@nxlv/python:update",
      "options": {}
    },
    "remove": {
      "executor": "@nxlv/python:remove",
      "options": {}
    },
    "build": {
      "executor": "@nxlv/python:build",
      "outputs": [
        "{projectRoot}/dist"
      ],
      "options": {
        "outputPath": "libs/py/db/dist",
        "publish": false,
        "lockedVersions": true,
        "bundleLocalDependencies": true
      }
    },
    "install": {
      "executor": "@nxlv/python:install",
      "options": {
        "silent": false,
        "args": "",
        "cacheDir": ".cache/pypoetry",
        "verbose": false,
        "debug": false
      }
    },
    "lint": {
      "executor": "@nxlv/python:flake8",
      "outputs": [
        "{workspaceRoot}/reports/libs/py/db/pylint.txt"
      ],
      "options": {
        "outputFile": "reports/libs/py/db/pylint.txt"
      }
    },
    "test": {
      "executor": "@nxlv/python:run-commands",
      "outputs": [
        "{workspaceRoot}/reports/libs/py/db/unittests",
        "{workspaceRoot}/coverage/libs/py/db"
      ],
      "options": {
        "command": "poetry run pytest tests/",
        "cwd": "libs/py/db"
      }
    }
  },
  "tags": []
}
