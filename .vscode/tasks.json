{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "@lib/dev:build",
            "type": "shell",
            "command": "bun vite dev --host 0.0.0.0",
            "options": {
                "cwd": "${workspaceFolder}/lib/dev"
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "custom",
                "pattern": [
                    {
                        "regexp": "^([^\\\\s].*)\\\\((\\\\d+,\\\\d+)\\\\):\\\\s*(.*)$",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "invalid",
                    "endsPattern": "ready in"
                }
            },
        },
        {
            "label": "@lib/ws:dev",
            "type": "shell",
            "command": "bun vite dev --host 0.0.0.0",
