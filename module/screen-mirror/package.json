{
	"name": "@module/screen-mirror",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev --host 0.0.0.0 --port 5174",
		"build": "vite build && bun run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "bun run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"devDependencies": {
		"@lib/icons": "workspace:*",
		"@lib/ui": "workspace:*",
		"@lib/theme": "workspace:*",
		"@lib/peer": "workspace:*",
		"@lib/dev": "workspace:*",
		"@module/secure": "workspace:*",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.27.6",
		"@sveltejs/package": "^2.0.0",
		"publint": "^0.1.9",
		"svelte": "^4.2.8",
		"svelte-check": "^3.6.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.0"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module"
}