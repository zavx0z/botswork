# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build io-chat`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t io-chat`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system io-chat && \
          adduser --system -G io-chat io-chat

COPY dist/apps/io/chat io-chat
RUN chown -R io-chat:io-chat .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix io-chat --omit=dev -f install

CMD [ "node", "io-chat" ]
